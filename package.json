{
  "name": "cursorcine",
  "version": "0.8.0",
  "description": "Electron desktop recorder with cursor-follow auto zoom",
  "main": "src/main.js",
  "scripts": {
    "start": "node scripts/start-electron.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "predist:win": "node scripts/check-dist-win-env.js && npm run build:native-hdr-win",
    "dist:win": "electron-builder --win nsis",
    "dist:linux": "electron-builder --linux AppImage deb",
    "build:native-hdr-win": "node scripts/build-native-hdr-win.js",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:linux": "npm run check:e2e:linux-env && xvfb-run -a playwright test --project=linux-electron",
    "test:e2e:windows": "playwright test --project=windows-electron",
    "test:coverage": "vitest run --coverage",
    "test": "npm run test:unit && npm run test:integration",
    "check:e2e:linux-env": "node scripts/check-e2e-linux-env.js",
    "devcontainer:select": "node scripts/select-devcontainer-config.js",
    "devcontainer:select:linux": "node scripts/select-devcontainer-config.js --linux",
    "devcontainer:select:portable": "node scripts/select-devcontainer-config.js --portable",
    "test:native:coverage:windows": "node tests/native/windows-native-coverage-smoke.js",
    "test:native:coverage:report": "node scripts/render-native-coverage-report.js",
    "test:native:coverage:summary": "node scripts/print-native-coverage-summary.js",
    "test:native:coverage:windows:full": "node scripts/run-native-coverage-full.js"
  },
  "author": {
    "name": "allenyl",
    "email": "allen7575@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@vitest/coverage-v8": "^2.1.9",
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8",
    "playwright": "^1.58.2",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "uiohook-napi": "^1.5.4"
  },
  "build": {
    "appId": "com.cursorcine.app",
    "productName": "CursorCine",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "native/windows-hdr-capture/**/*",
      "native/windows-wgc-hdr-capture/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "signAndEditExecutable": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "AudioVideo",
      "maintainer": "allenyl <allen7575@gmail.com>"
    }
  }
}
